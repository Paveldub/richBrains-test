            .trampolines__left-price 
              .trampolines__left-price-elem
                h4 1 928 000 
                span руб.
              .trampolines__left-price-right 
                .button 
                  a(href="#")
                    .button__left 
                      span Купить
                    .button__right 
                      i.sprite.sprite-arrow-right-black
          .trampolines__right 
            img(src="/assets/img/trampoline-changed.png")
            .trampolines__right-zoom 
              i.sprite.sprite-zoom
          .hidden-img-first
            img(src="/assets/img/tramp-1.png")
          .hidden-img-second 
            img(src="/assets/img/tramp-2.png")  
          ul.tabs-menu 
              li.tabs-menu__item
                .tabs-menu__item-block 
                  .tabs-menu__item-block-img 
                    img(src="/assets/img/tramp-1.png")
                    .tabs-menu__item-block-guarantee 
